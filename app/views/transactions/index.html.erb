<h3>Transaction History</h3>
<table class="table">
    <thead>
        <th>Date and Time</th>
        <th>Transaction</th>
        <th>Company</th>
        <th>Symbol</th>
        <th>Quantity</th>
        <th>Unit Price</th>
    </thead>
    <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
    <td><%= transaction.created_at.strftime("%b %e, %Y %l:%M %p") %></td>
    <td><%= transaction.transaction_type.capitalize %></td>
    <td><%= transaction.name %></td>
    <td><%= transaction.ticker %></td>
    <td><%= transaction.quantity %></td>
    <td><%= transaction.price %></td>
    </tr>
    <% end %>

    </tbody>
        
        
</table>

<%if false%>
<% @transactions.each do |transaction| %>
            <div class= "user-list-card">
                <div>
                    <span class="user-list-card-name"><%= transaction.name %></span>
                <p><%= transaction.ticker %> | <%= transaction.quantity %> </p>
            </div>
            </div>

            <% end %>
            <% end %>