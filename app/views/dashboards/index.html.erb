<h1>User dashboard</h1>

<% if current_user.status == 'pending' %>
    <p>pending pa</p>
<% elsif current_user.status == 'approved' %>
    <h1>My Portfolio</h1>
    <div class='search-area'>
        <h3>Search Stocks</h3>
        <%= form_tag search_stock_path, remote: true, method: :get do %>
            <div class="form-group row">
                <div class="col-sm-9 no-right-padding">
                    <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
                </div>
                <div class="col-sm-3 no-left-padding">
                    <%= button_tag type: :submit, class: "btn btn-success" do %>
                        <%= fa_icon 'search 2x' %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>

    <div id="results">
        
    </div>

<% else %>
    <p> Your account has been rejected. Please log out and try registering again using a different email. </p>
<% end %>

<%= link_to "Logout", destroy_user_session_path, method: :delete %>