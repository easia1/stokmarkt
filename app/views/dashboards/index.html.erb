

<% if current_user.status == 'pending' %>
    <div class= "user-list-card-blank">
        <i class='bx bx-happy-beaming' ></i> 
        <p>Your account's approval is still pending. Please try again later.</p>
    </div>
<% elsif current_user.status == 'approved' %>
    <h1>My Portfolio</h1>
    <div class= "user-list">
        <% @stocks.each do |stock| %>
            <div class= "user-list-card">
                <div>
                    <span class="user-list-card-name"><%= stock.name %></span>
                <p><%= stock.ticker %></p>
                </div>
                <div class="user-button-container">
                    <%= link_to root_path, class: "btn btn-success add-user" do %> 
                            <i class='bx bxs-cart' ></i> 
                    <% end %>
                    <%= link_to root_path, class: "btn btn-danger delete-user" do %> 
                            <i class='bx bxs-trash-alt' ></i> 
                    <% end %>
                </div>
            </div>
        <% end %>





    <div class='search-area'>
        <h3>Search Stocks</h3>
        <%= form_tag search_stock_path, remote: true, method: :get do %>
            <div class="form-group row">
                <div class="col-sm-9 no-right-padding">
                    <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
                </div>
                <div class="col-sm-3 no-left-padding">
                    <%= button_tag type: :submit, class: "btn btn-success add-user" do %>
                        <%= fa_icon 'search 2x' %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>

    <div id="results">
        
    </div>

    <h2>Current Balance:</h2>
    <p><%= number_to_currency(current_user.balance) %></p>

    <h2>Add Balance:</h2>
    <%= form_with url: dashboards_add_balance_path do |f| %>
        <p>
            <%= f.label :amount %><br/>
            <%= f.number_field :amount, step: 0.01, class: "form-control" %>
        </p>
        <br>
        <p>
            <%= f.submit "Add balance", class: "btn btn-success add-user" %>
        </p>
    
    <% end %>

<% else %>
    <div class= "user-list-card-blank">
        <i class='bx bx-confused' ></i> 
        <p>Your account has been rejected. Please log out and try registering again using a different email.</p>
    </div>
<% end %>

